<Page x:Class="TrackingProgressInDevEducationUI.Pages.CreateTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CreateTeam">

    <Grid Background="#FFDED5D4">
        <Button Style="{StaticResource LogoStyles}" x:Name="Logo" Margin="0,0,0,0" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label x:Name="LPageName" Content="Создание команды" HorizontalAlignment="Right" Margin="0,17,10,0" VerticalAlignment="Top" Width="185" Height="44" FontSize="18"/>
        <Button Style="{StaticResource ButtonBackStyles}" x:Name="BBack" Content="Назад" Margin="169,22,0,0" Click="BBack_Click"/>
        <Grid HorizontalAlignment="Center" Height="373" Margin="0,67,0,0" VerticalAlignment="Top" Width="780" Background="Gray" RenderTransformOrigin="0.456,0.49">
            <Button Style="{StaticResource ButtonCreatStyles}" x:Name="BCreatGroup" Content="Создать" Margin="582,263,0,0" />
            <Label x:Name="LTeamName" Content="НАЗВАНИЕ КОМАНДЫ" HorizontalAlignment="Left" Margin="62,33,0,0" VerticalAlignment="Top" Width="165" FontSize="14" RenderTransformOrigin="0.533,1.415"/>
            <TextBox Style="{StaticResource LittleTextBoxStyles}" x:Name="TBTeamName" Margin="232,32,0,311" />
            <Button Style="{StaticResource ButtonAddStyles}" x:Name="BAddStudents" Content="Добавить участников" HorizontalAlignment="Left" Height="28" Margin="428,82,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" FontSize="16" Click="BAddStudents_Click"/>
            <Label x:Name="label" Content="Выбрано ... участников" HorizontalAlignment="Left" Margin="448,115,0,0" VerticalAlignment="Top" Width="140"/>
        </Grid>

    </Grid>
</Page>
