<Page x:Class="TrackingProgressInDevEducationUI.Pages.CreateTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTeam">

    <Grid Background="#FFDED5D4">
        <Button x:Name="Logo" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="52" Width="142" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label x:Name="LPageName" Content="Создание команды" HorizontalAlignment="Right" Margin="0,17,10,0" VerticalAlignment="Top" Width="185" Height="44" FontSize="18"/>
        <Button x:Name="BBack" Content="Назад" HorizontalAlignment="Left" Margin="169,22,0,0" VerticalAlignment="Top" Height="28" Width="90" Click="BBack_Click"/>
        <Grid HorizontalAlignment="Center" Height="373" Margin="0,67,0,0" VerticalAlignment="Top" Width="780" Background="#FFF9EFEF" RenderTransformOrigin="0.456,0.49">
            <Button x:Name="BCreatGroup" Content="Создать" HorizontalAlignment="Left" Height="28" Margin="582,263,0,0" VerticalAlignment="Top" Width="137" Background="#FFE1909F" FontSize="16"/>
            <Label x:Name="LTeamName" Content="НАЗВАНИЕ КОМАНДЫ" HorizontalAlignment="Left" Margin="62,33,0,0" VerticalAlignment="Top" Width="165" FontSize="14" RenderTransformOrigin="0.533,1.415"/>
            <TextBox x:Name="TBTeamName" HorizontalAlignment="Left" Height="29" Margin="293,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="451" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            <Button x:Name="BAddStudents" Content="Добавить участников" HorizontalAlignment="Left" Height="28" Margin="428,82,0,0" VerticalAlignment="Top" Width="180" Background="#FFDDDDDD" FontSize="16" Click="BAddStudents_Click"/>
            <Label x:Name="label" Content="Выбрано ... участников" HorizontalAlignment="Left" Margin="448,115,0,0" VerticalAlignment="Top" Width="140"/>
        </Grid>

    </Grid>
</Page>
