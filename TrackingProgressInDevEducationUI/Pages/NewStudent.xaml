<Page x:Class="TrackingProgressInDevEducationUI.Pages.NewStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewStudent">

    <Grid x:Name="Grid" Background="#FFDCD2D2" Margin="0,0,-100,-250" HorizontalAlignment="Right" Width="900">
        <Image x:Name="ImageIcon" HorizontalAlignment="Left" Height="74" Margin="10,10,0,0" VerticalAlignment="Top" Width="229" Source="/logo.png" Stretch="Fill" />
        <Label x:Name="NamePage" Content="Создание нового студента" HorizontalAlignment="Left" Height="72" Margin="287,16,0,0" VerticalAlignment="Top" Width="308" FontSize="23" FontWeight="Bold"/>
        <Button x:Name="ImportStudentBtn" Content="Загрузить Excel" HorizontalAlignment="Left" Margin="650,10,0,0" VerticalAlignment="Top" Height="74" Width="229" FontSize="24"/>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="98" Margin="0,4,0,0" VerticalAlignment="Top" Width="880"/>
        <Grid x:Name="GridCenter" HorizontalAlignment="Center" Height="512" Margin="0,155,0,0" VerticalAlignment="Top" Width="772" Background="#FFF9EFEF">
            <Label x:Name="Surname" Content="Фамилия" HorizontalAlignment="Left" Height="35" Margin="36,49,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="SurnameTextBox" HorizontalAlignment="Center" Height="35" Margin="349,49,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Label x:Name="Name" Content="Имя" HorizontalAlignment="Left" Height="35" Margin="36,105,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="35" Margin="366,105,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Label x:Name="Phone" Content="Телефон" HorizontalAlignment="Left" Height="34" Margin="36,160,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="PhoneTextBox" HorizontalAlignment="Left" Height="34" Margin="366,160,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Label x:Name="Email" Content="Email" HorizontalAlignment="Left" Height="35" Margin="36,212,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Height="35" Margin="366,212,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Label x:Name="ContractNumber" Content="Номер контракта" HorizontalAlignment="Left" Height="36" Margin="36,266,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="ContractNumberTextBox" HorizontalAlignment="Left" Height="36" Margin="366,266,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Label x:Name="Birthday" Content="Дата рождения" HorizontalAlignment="Left" Height="35" Margin="36,327,0,0" VerticalAlignment="Top" Width="287" FontSize="22" HorizontalContentAlignment="Left"/>
            <TextBox x:Name="BirthdayTextBox" HorizontalAlignment="Left" Height="35" Margin="366,327,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Background="#FFE4E4E4"/>

            <Button x:Name="CreateCursesButton" Content="Создать" HorizontalAlignment="Left" Height="58" Margin="574,426,0,0" VerticalAlignment="Top" Width="181" FontSize="20" Background="#FFEC80A2"/>
        </Grid>

    </Grid>
</Page>
