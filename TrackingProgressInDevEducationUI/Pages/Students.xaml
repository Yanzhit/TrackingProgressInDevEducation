<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      xmlns:SqlClient="clr-namespace:System.Data.SqlClient;assembly=System.Data.SqlClient" x:Class="TrackingProgressInDevEducationUI.Pages.Students"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Students">

    <Grid x:Name="Grid" Background="#FFDCD2D2" Margin="0,0,-100,-250" HorizontalAlignment="Right" Width="900">
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="98" Margin="0,4,0,0" VerticalAlignment="Top" Width="880"/>
        <Label x:Name="NamePage" Content="Студенты колледжа" HorizontalAlignment="Left" Height="72" Margin="287,16,0,0" VerticalAlignment="Top" Width="308" FontSize="30"/>
        <Button x:Name="AddStudentBtn" Content="Добавить студента" HorizontalAlignment="Left" Margin="650,10,0,0" VerticalAlignment="Top" Height="74" Width="229" FontSize="16"/>
        <DataGrid x:Name="StudentGrid" Margin="10,116,10,10" BorderBrush="#FFF0F0F0" IsSynchronizedWithCurrentItem="True" SelectionChanged="StudentGrid_SelectionChanged" AlternatingRowBackground="#FFA08E8E">
            <DataGrid.CellStyle>
                <Style/>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" HeaderStringFormat="Фамилия" Width="150"/>
                <DataGridTextColumn Header="Имя" HeaderStringFormat="Имя" Width="150"/>
                <DataGridTextColumn Header="Телефон" HeaderStringFormat="Телефон" Width="100"/>
                <DataGridTextColumn Header="Email" HeaderStringFormat="Email" Width="100"/>
                <DataGridTextColumn Header="Номер контракта" HeaderStringFormat="Номер контракта"/>
                <DataGridTextColumn Header="Номер телефона" HeaderStringFormat="Номер телефона"/>
                <DataGridTextColumn Header="Рейтинг" HeaderStringFormat="Рейтинг"/>
            </DataGrid.Columns>

            <DataGrid.ItemsSource>
                <SqlClient:SqlConnectionStringBuilder/>
            </DataGrid.ItemsSource>

        </DataGrid>
        <Button x:Name="Logo" Content="" HorizontalAlignment="Left" Margin="52,18,0,0" VerticalAlignment="Top" Height="40" Width="108" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Pages/Resourse/educationCore.jpg"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
