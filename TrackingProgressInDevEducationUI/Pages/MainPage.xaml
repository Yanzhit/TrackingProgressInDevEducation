<Page x:Class="TrackingProgressInDevEducationUI.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    
    <Page.Resources>
        <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
    </Page.Resources>

    <Grid Background ="#91D4D1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="Logo" Content="" HorizontalAlignment="Stretch"  VerticalAlignment="Top" Height="52" Width="142"
                Click="Logo_Click" Grid.Row="0" Grid.Column="0">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Button 
            Content="Студенты колледжа" 
            HorizontalAlignment="Center" Width="780" Click="Button_Click_Student" 
            Grid.ColumnSpan ="5" Grid.Row ="1"
        />

        <Button  
            Content="Создать группу" Click="Button_Click_CreateGroups" Grid.Column="4" Grid.Row="2" 
            Margin="0,30,0,30" 
        />

        <Button Content="Создать команду" Click="Button_Click_CreateTeam" Grid.Column="4" Grid.Row="3" 
                Margin="0,30,0,30" 
        />

        <TextBox x:Name="WelcomeBlock" 
            HorizontalAlignment="Stretch" 
            Height="Auto" 
            Margin="0,10,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Stretch" 
            Width="Auto" 
            Background="#FFE0DEDE" 
            FontSize="16" 
            FontWeight="Bold" 
            BorderBrush="#FFE0DEDE" TextChanged="WelcomeBlock_TextChanged"
            Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="0"
        />
        <DataGrid x:Name="GetGroupsByLectorA" Width="784"  FontSize="16" 
                  AutoGenerateColumns="False" CanUserAddRows ="False" 
                  CanUserDeleteRows="False"
                  Background="White" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Margin="5,5,0,0"
                  Grid.ColumnSpan="4" Grid.Row="2">
        
            <DataGrid.Columns>
                <DataGridTextColumn Binding ="{Binding Path = NameG}"  IsReadOnly="True" Header="Группа" Width="150"/>
                <DataGridTextColumn Binding ="{Binding Path = NameC}"  IsReadOnly="True" Header="Курс" Width="150"/>
                <DataGridTextColumn Binding ="{Binding Path = StartDate}" IsReadOnly="True" Header="Дата начала" Width="100" />
                <DataGridTextColumn Binding ="{Binding Path = EndDate}" IsReadOnly="True" Header="Дата окончания" Width="100"/>
                <DataGridTextColumn Binding ="{Binding Path = StudCount}" IsReadOnly="True" Header="Кол-во студентов" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="GetTeamsByLectorA" Width="784"  FontSize="16" 
                  AutoGenerateColumns="False" CanUserAddRows ="False" 
                  CanUserDeleteRows="False"
                  Background="White" HorizontalAlignment="Left" 
                  VerticalAlignment="Top" Margin="5,5,0,0"
                  Grid.ColumnSpan="4" Grid.Row="3">

            <DataGrid.Columns>
                <DataGridTextColumn Binding ="{Binding Path = Name}"  IsReadOnly="True" Header="Команда" Width="150"/>
                <DataGridTextColumn Binding ="{Binding Path = From}" IsReadOnly="True" Header="Дата начала" Width="90"/>
                <DataGridTextColumn Binding ="{Binding Path = To}" IsReadOnly="True" Header="Дата окончания" Width="100" />
                <DataGridTextColumn Binding ="{Binding Path = StudentCount}" IsReadOnly="True" Header="Кол-во студентов" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
