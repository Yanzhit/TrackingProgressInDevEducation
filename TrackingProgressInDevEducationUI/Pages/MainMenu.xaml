<Page x:Class="TrackingProgressInDevEducationUI.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White" Offset="0.185"/>
                <GradientStop Color="#FF95D492" Offset="0.811"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="QueriesTestButton" Content="QueriesTest" HorizontalAlignment="Left" Height="25" Margin="52,26,0,0" VerticalAlignment="Top" Width="88" Click="QueriesTestButton_Click" Visibility="Hidden"/>
        <CheckBox x:Name="DevModeCheckBox" Content="DevMod" HorizontalAlignment="Left" Margin="710,10,0,0" VerticalAlignment="Top" Checked="DevModCheckBox_Checked"/>

    </Grid>
</Page>
