<Page x:Class="TrackingProgressInDevEducationUI.Pages.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.996"/>
                <GradientStop Color="#FFAFFFDE" Offset="0.643"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Вход" HorizontalAlignment="Left" Height="27" Margin="328,249,0,0" VerticalAlignment="Top" Width="148" Click="SignIn_Click"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="27" Margin="262,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="27" Margin="262,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294"/>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="262,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294"><Run Language="ru-ru" Text="Логин"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="262,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
        <Button Content="Регистрация" HorizontalAlignment="Left" Height="28" Margin="328,318,0,0" VerticalAlignment="Top" Width="148" Click="Registration_Click"/>
        <TextBlock HorizontalAlignment="Center" Height="22" Margin="0,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"><Run Language="ru-ru" Text="Новый пользователь?"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="41" Margin="262,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294"><Run Language="ru-ru" Text="Информационное окно"/></TextBlock>
        <Button Content="" HorizontalAlignment="Left" Height="40" Margin="52,18, 0,0" VerticalAlignment="Top" Width="108">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
