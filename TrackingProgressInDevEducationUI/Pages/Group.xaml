<Page x:Class="TrackingProgressInDevEducationUI.Pages.Group"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Group">

    <Grid Background="#FFDED4D4">
        <Grid HorizontalAlignment="Center" Height="373" Margin="0,67,0,0" VerticalAlignment="Top" Width="780" Background="#FFF9EFEF" RenderTransformOrigin="0.456,0.49">
            <Button x:Name="BCreatGroup" Content="Создать" HorizontalAlignment="Left" Height="28" Margin="582,263,0,0" VerticalAlignment="Top" Width="137" Background="#FFE1909F" FontSize="16" Click="BCreatGroup_Click"/>
            <Label x:Name="LGroupName" Content="НАЗВАНИЕ ГРУППЫ" HorizontalAlignment="Left" Margin="65,33,0,0" VerticalAlignment="Top" Width="165" FontSize="14" RenderTransformOrigin="0.533,1.415"/>
            <Label x:Name="TBChangeCourse" Content="ВЫБРАТЬ КУРС" HorizontalAlignment="Left" Margin="65,88,0,0" VerticalAlignment="Top" Width="165" FontSize="14"/>
            <Label x:Name="LStartDate" Content="ДАТА НАЧАЛА" HorizontalAlignment="Left" Margin="65,145,0,0" VerticalAlignment="Top" Width="165" FontSize="14"/>
            <Label x:Name="LEndDate" Content="ДАТА ОКОНЧАНИЯ" HorizontalAlignment="Left" Margin="65,194,0,0" VerticalAlignment="Top" Width="165" FontSize="14"/>
            <TextBox x:Name="TBGroupName" HorizontalAlignment="Left" Height="29" Margin="293,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="451" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            <ComboBox x:Name="CBChangeCourse" HorizontalAlignment="Left" Height="29" Margin="293,88,0,0" VerticalAlignment="Top" Width="451" SelectionChanged="CBChangeCourse_SelectionChanged"/>
            <DatePicker x:Name="DPEndDate" HorizontalAlignment="Left" Margin="293,194,0,0" VerticalAlignment="Top" Height="26" Width="139"/>
        </Grid>
        <Label x:Name="LPageName" Content="Создание новой группы" HorizontalAlignment="Left" Height="53" Margin="498,10,0,0" VerticalAlignment="Top" Width="292" FontSize="24"/>
        <DatePicker x:Name="DPStartDate" HorizontalAlignment="Left" Margin="302,0,0,0" VerticalAlignment="Center" Height="26" Width="140"/>
        <Button x:Name="Logo" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="52" Width="142" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
