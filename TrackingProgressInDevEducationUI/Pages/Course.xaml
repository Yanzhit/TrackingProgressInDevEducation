<Page x:Class="TrackingProgressInDevEducationUI.Pages.Course"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Course">

    <Grid x:Name="Grid" Background="#FFDED4D4" Margin="0,0,-100,-250
          " HorizontalAlignment="Right" Width="900">
        <Label x:Name="LPageName" Content="Создание нового курса" HorizontalAlignment="Center" Height="56" Margin="0,20,0,0" VerticalAlignment="Top" Width="352" FontSize="30"/>
        <Grid x:Name="GridCenter" HorizontalAlignment="Center" Height="566" Margin="0,101,0,0" VerticalAlignment="Top" Width="850" Background="#FFF9EFEF">
            <Label x:Name="NameCursesLabel" Content="Название курса" HorizontalAlignment="Left" Height="42" Margin="36,22,0,0" VerticalAlignment="Top" Width="223" FontSize="28"/>
            <Label x:Name="CourseDescriptionLabel" Content="Описание курса" HorizontalAlignment="Left" Height="57" Margin="36,201,0,0" VerticalAlignment="Top" Width="223" FontSize="28"/>
            <TextBox x:Name="NameCursesTextBox" HorizontalAlignment="Left" Height="84" Margin="310,22,0,0" Text="Введите название..." TextWrapping="Wrap" VerticalAlignment="Top" Width="464" Background="#FFE4E4E4"/>
            <TextBox x:Name="CourseDescriptionTextBox" HorizontalAlignment="Left" Height="219" Margin="310,127,0,0" Text="Введите описание..." TextWrapping="Wrap" VerticalAlignment="Top" Width="464" Background="#FFE6E6E6"/>
            <Button x:Name="CreateCursesButton" Content="Создать курс" HorizontalAlignment="Left" Height="38" Margin="349,445,0,0" VerticalAlignment="Top" Width="389" FontSize="20" Background="#FFEC7979"/>
            <Label x:Name="ChangeCourseLabel" Content="Описание курса" HorizontalAlignment="Left" Height="57" Margin="36,365,0,0" VerticalAlignment="Top" Width="223" FontSize="28"/>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="310,366,0,0" VerticalAlignment="Top" Width="464" Height="56" RenderTransformOrigin="0.994,1.964"/>
        </Grid>
        <Button x:Name="Logo" Content="" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Height="76" Width="190" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
