<Page x:Class="TrackingProgressInDevEducationUI.Pages.Course"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrackingProgressInDevEducationUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Course">

    <Grid x:Name="Grid" Background="#FFDED4D4" Margin="0,0,-100,-250
          " HorizontalAlignment="Right" Width="900">
        <Label x:Name="LPageName" Content="Создание нового курса" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="352" FontSize="30" Margin="0,10,0,0"/>
        <Grid x:Name="GridCenter" HorizontalAlignment="Center" Height="619" Margin="0,71,0,0" VerticalAlignment="Top" Width="880" Background="#FFF9EFEF">
            <Label x:Name="LNameCurses" Content="Название курса" HorizontalAlignment="Left" Height="51" Margin="36,22,0,0" VerticalAlignment="Top" Width="223" FontSize="28"/>
            <Label x:Name="LCourseDescription" Content="Описание курса" HorizontalAlignment="Left" Height="57" Margin="36,201,0,0" VerticalAlignment="Top" Width="223" FontSize="28"/>
            <TextBox 
                     Style="{StaticResource TextBoxStyles}"
                     x:Name="TBNameCurses" 
                     Margin="264,22,56,512" 
                     Text="Введите название..." TextChanged="TBNameCurses_TextChanged" Width="560" Height="85" 
            />
            <TextBox 
                Style="{StaticResource TextBoxStyles}"
                x:Name="TBCourseDescription" 
                     Margin="264,187,0,347" 
                     Text="Введите описание..." />
            <Button x:Name="BCreateCurses" Content="Создать курс" HorizontalAlignment="Center" Height="38" Margin="0,470,0,0" VerticalAlignment="Top" Width="388" FontSize="20" Background="#FFE1909F" Click="BCreateCurses_Click"/>
        </Grid>
        <Button x:Name="Logo" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="52" Width="142" Click="Logo_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resourses/Images/Education.jpg" Stretch="Uniform"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
